{{#if rowModel}}
    {{#with rowModel}}
        <tr name="{{module}}_{{attributes.id}}" class="single">
                <td>
                    {{#each ../_fields.all}}
                        {{#eq name 'id'}}
                            <a href="javascript:void(0)" class="btn intdb_showdashboards" rel="tooltip" data-placement="middle" title="{{str 'LBL_SEE_DASHBOARDS' 'INTDB_Dashboards'}}"  data-id="{{fieldValue ../../this 'id'}}">
                                <i class="fa {{intdbExpandCSS ../../../this}} intdb_expanded" tabindex="-1"></i>
                            </a>
                        {{/eq}}
                    {{/each}}
                </td>
            {{#each ../_fields.visible}}
                <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}">
                    {{field ../../this model=../this template=../../viewName}}
                </td>
            {{/each}}
            {{#each ../rightColumns}}
                <td>
                    {{field ../../this model=../this template=../../viewName}}
                </td>
            {{/each}}
        </tr>
        {{#each ../_fields.all}}
            {{#eq name 'id'}}
                <tr style='display:{{#if ../../../expanded}}table-row{{else}}none{{/if}}' id='user_dashboards_{{fieldValue ../../this 'id'}}' class='users_dashboards_row'>
                    <td></td>
                    <td class='users_dashboards'>
                        {{partialWithData ../../this 'row-dashboards' 'dashboards' ../../../this}}
                    </td>
                    <td></td>
                </tr>
            {{/eq}}
        {{/each}}
    {{/with}}
{{else}}
    <tr name="{{module}}_{{model.id}}" class="single">
            <td>
                {{#each view._fields.all}}
                    {{#eq name 'id'}}
                        <a href="javascript:void(0)" class="btn intdb_showdashboards" rel="tooltip" data-placement="middle" title="{{str 'LBL_SEE_DASHBOARDS' 'INTDB_Dashboards'}}" data-id="{{fieldValue ../../model 'id'}}">
                            <i class="fa {{intdbExpandCSS ../../view}} intdb_expanded" tabindex="-1"></i>
                        </a>
                    {{/eq}}
                {{/each}}
            </td>
        {{#each view._fields.visible}}
            <td{{#if align}} class="{{align}}"{{/if}} data-type="{{type}}">
                {{field ../view model=../model template=../view.viewName}}
            </td>
        {{/each}}
        {{#each view.rightColumns}}
            <td>
                {{field ../view model=../model template=../view.viewName}}
            </td>
        {{/each}}
    </tr>
    {{#each view._fields.all}}
        {{#eq name 'id'}}
            <tr style='display:{{#if ../../view.expanded}}table-row{{else}}none{{/if}}' id='user_dashboards_{{fieldValue ../../model 'id'}}' data-id="{{fieldValue ../../model 'id'}}" class='users_dashboards_row'>
                <td></td>
                <td class='users_dashboards' colspan='{{../../this.view.colSpan}}'>
                    {{partialWithData ../../model 'row-dashboards' 'dashboards' ../../this}}
                </td>
                <td></td>
            </tr>
        {{/eq}}
    {{/each}}
{{/if}}
